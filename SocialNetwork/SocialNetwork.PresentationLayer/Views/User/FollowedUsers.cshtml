@model IEnumerable<SocialNetwork.PresentationLayer.Models.UserView>

@{
    ViewBag.Title = "FollowedUsers";
}

<div class="followed-users">
    @if (Model.Count() == 0)
    {
        <p style="font-size: 16px;">You did not subscribe to any users. Click <a href="~/User/Search">here</a> and find your hero!</p>
    }
    else
    {
        @Helper.DisplayListOfUsers("My Subscribes", "/User/FollowedUsers", Model, ViewBag.Page ?? 0, ViewBag.IsLastPage ?? false)  
    }
</div>

