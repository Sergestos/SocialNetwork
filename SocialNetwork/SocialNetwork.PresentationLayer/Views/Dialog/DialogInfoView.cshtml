@model SocialNetwork.PresentationLayer.Models.DialogInfo

<div class="dialogInfo">
    <div>
        
    </div>
    <div class="dialogInfo-users border">
        <button onclick="location.href='@Url.Action("DialogPreviews", "Dialog", null)'" type="button" class="btn btn-default" id="dialogInfo-users-ButtonBack">Return to dialog</button>
        @foreach (var item in Model.UsersInDialog)
        {
            <div class="dialogInfo-users-UserInfo">
                <div>
                    @if (Model.MasterID == item.ID)
                    {
                        <p><a href="/User/UserPage?id=@item.ID"> @item.FirstName @item.SurName </a>(Dialog Master)</p>
                    }
                    else
                    {
                        <p><a href="/User/UserPage?id=@item.ID"> @item.FirstName @item.SurName</a></p>
                    }                    
                    <hr />
                </div>
            </div>
        }
    </div>
</div>

